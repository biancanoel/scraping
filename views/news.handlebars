<body>

    <ul class="nav nav-pills">
        <li role="presentation" class="active">
            <a href="#">Home</a>
        </li>
        <li role="presentation">
            <a href="/saved" class="view-saved">Saved Articles</a>
        </li>

    </ul>
    <div class="row top">

        <div class="col-md-6 col-md-offset-3">
            <h1>Breaking News from the American Riviera</h1>
        </div>

        <div class="col-md-4 col-md-offset-4">
            <button type="button" class="btn btn-info btn-lg get-news-btn" id="get-news">Get the news!</button>
        </div>

    </div>


    <div class="row main-section">
        <!--news articles go here -->
        <div class="col-md-6 col-md-offset-4 col-sm-8 col-sm-offset-2" id="articles">
            {{#each news}}
            <span class="article-box">
                <a href={{link}}>
                    <h3 class="news-article"> {{headline}} </h3>

                </a>
                <h4 class="subtitle"> {{subtitle}} </h4>
                <button class="leave-comment btn btn-info" data-id={{_id}}> Comment </button>
                {{#unless saved}}
                <button class="save-article btn btn-primary" data-id={{_id}} data-saved={ {saved}}> Save </button>
                {{/unless}} {{#if saved}}
                <button class="btn btn-dark" data-id={{_id}} data-saved={ {saved}}> Article Saved Already </button>
                {{/if}}
            </span>
            {{/each}}
        </div>

        <!--comment box goes here -->
        {{!--
        <div class="col-md-4 col-md-offset-2 comment-box">
            <h3 class="article-title"> Article title</h3>

            <input type="text" id="comment-title" name="comment-title">

            <textarea name="comment-body" id="comment-body" cols="30" rows="10"></textarea>
            <button class="save-comment" data-id={{_id}}> Save comment </button>
            <button class="delete-comment"> Delete comment </button>

        </div> --}} {{!-- modal shit for adding comment --}}
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="article-title"> Article title</h3>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-sm-8 col-sm-offset-4 comment-box">
                                <input type="text" id="comment-title" name="comment-title">
                            </div>
                            <div class="col-sm-8 col-sm-offset-4">
                                <textarea name="comment-body" id="comment-body" cols="30" rows="5"></textarea>
                            </div>
                            <div class="col-sm-8 col-sm-offset-4"> 
                                <button class="save-comment btn btn-info" data-id={{_id}}> Save comment </button>
                                <button class="delete-comment btn btn-danger"> Delete comment </button>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary close-modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        {{!-- modal shit for saving article --}}
        <div id="myModal2" class="modal fade" role="dialog">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="article-title"> Wonderful!</h3>
                    </div>
                    <div class="modal-body">
                        <h3>This article has been saved. </h3>
                    </div>

                </div>
                <div class="modal-footer">You're welcome </div>
            </div>

        </div>
    </div>




